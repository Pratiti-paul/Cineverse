datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  watchlist Watchlist[]
  createdAt DateTime  @default(now())
}

model Watchlist {
  id      Int    @id @default(autoincrement())
  userId  Int
  movieId String
  title   String
  poster  String
  user    User   @relation(fields: [userId], references: [id])
}
